#!/bin/sh
# Labwc autostart for HydraVision kiosk

LOG="${HOME}/.cache/hydravision-kiosk.log"
mkdir -p "$(dirname "$LOG")"

xset s off
xset -dpms
xset s noblank

COG_BIN="$(command -v cog || true)"
if [ -z "$COG_BIN" ]; then
  echo "cog not found in PATH." >>"$LOG"
  exit 1
fi

"$COG_BIN" --platform=wl --fullscreen \
  file:///home/admin/Dev/cross_shore_dev/apps/controller/mvp_ui.html >>"$LOG" 2>&1

